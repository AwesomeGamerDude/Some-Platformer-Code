


ysp+=0.1
xsp=0

if keyboard_check(vk_left)
{
	xsp=-1
}

if keyboard_check(vk_right)
{
	xsp=+1	
}

if place_meeting(x,y+1,[insert asset])
{
	ysp=0
	if keyboard_check(vk_up)
	{
		ysp=-2
	}
}

move_and_collide(xsp,ysp,[insert asset])

//Spike and Flag collisions

if place_meeting(x,y,[insert asset])
{
	room_restart()
} 

if place_meeting(x,y,[insert asset])
{
    room_goto_next()
} 
